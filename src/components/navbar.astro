---
import avatar from "@/assets/avatar.svg";
import ThemeButton from "@/components/theme-button.astro";

const LINKS = [
  { label: "home", url: "/" },
  { label: "projects", url: "/projects" },
];
---

<header class="max-w-3xl mx-auto p-8 flex justify-between items-center w-full">
  <div class="flex gap-2 items-center">
    <img src={avatar.src} alt="Avatar" fetchpriority="high" class="size-10" />
    <ThemeButton>
  </div>

  <nav aria-label="Main navigation">
    <ul class="flex gap-2">
      {
        LINKS.map((item) => (
          <li class="underline opacity-60 hover:opacity-100">
            <a href={item.url}> {item.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
